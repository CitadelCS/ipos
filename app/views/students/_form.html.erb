<%= form_with(model: student) do |form| %>
  <% if student.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(student.errors.count, "error") %> prohibited this student from being saved:</h2>

      <ul>
        <% student.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :Name %>
    <%= form.text_field :Name %>
  </div>

  <div class="field">
    <%= form.label :CWID %>
    <%= form.number_field :CWID %>
  </div>

  <div class="field">
    <%= form.label :Concentration %>
    <%= form.text_field :Concentration %>
  </div>

  <div class="control-group">
    <%= form.label "Advisors", class: 'control-label' %>
    <div class="controls">
      <%= form.select(:Advisor, options_from_collection_for_select(Professor.all, 'Name', 'Name')) %>
    </div>
  </div>
  
  <div class="field">
    <%= form.label "Professor ID" %>
    <%= form.number_field :professor_id %>
  </div>
  
  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
