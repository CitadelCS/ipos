<table>
  <tbody>
    <tr>
      <th>Name</th>
      <th>Cwid</th>
      <th>Concentration</th>
      <th>Advisor</th>
      <th colspan="3"></th>
    </tr>
    <% @students.each do |student| %>
    
      <tr>
        <td><%= student.Name %></td>
        <td><%= student.CWID %></td>
