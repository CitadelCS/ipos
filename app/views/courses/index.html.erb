<html>
<head>
<style>
table {
  border-collapse: collapse;
  width: 100%;
}

th, td {
  text-align: left;
  padding: 8px;
}

tr:nth-child(even){background-color: #f2f2f2}

th {
  background-color: #1a3152;
  color: white;
}
</style>
</head>
<h1>Courses</h1>
<table>
  <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
</table>

</body>
</html>
<table>
<tbody>
  <% @courses.each do |course| %>
   <tr>
      <td><%=course.prefix%>
      <td><%= link_to course.name, course %></td>
      <td><%=course.section%></td>
      <td><%=course.number%></td>
      <td><%=course.created_at%></td>
   </tr>
  <% end %>
</tbody>
</table>

<br>
<%= link_to "New Course", new_course_path %>

